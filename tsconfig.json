{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/__tests__",
    "src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.test.js",
		"src/**/*.spec.js"
  ]
}