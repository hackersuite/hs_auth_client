{
	"name": "@unicsmcr/hs_auth_client",
	"version": "2.0.0",
	"description": "API request paths for hs_auth platform",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"prebuild": "npm run lint",
		"build": "tsc",
		"lint": "eslint src --ext .ts",
		"test": "jest src --coverage"
	},
	"author": "unicsmcr",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/unicsmcr/hs_auth_client.git"
	},
	"bugs": {
		"url": "https://github.com/unicsmcr/hs_auth_client/issues"
	},
	"homepage": "https://github.com/unicsmcr/hs_auth_client#readme",
	"devDependencies": {
		"@types/jest": "^26.0.0",
		"@types/node": "^13.7.6",
		"@typescript-eslint/eslint-plugin": "^3.3.0",
		"@typescript-eslint/parser": "^3.3.0",
		"@unicsmcr/eslint-config": "^0.0.1",
		"axios-mock-adapter": "^1.18.1",
		"eslint": "^7.2.0",
		"jest": "^26.0.1",
		"ts-jest": "^26.1.0",
		"typescript": "^3.9.5"
	},
	"dependencies": {
		"axios": "^0.19.2"
	},
	"eslintConfig": {
		"extends": "@unicsmcr",
		"parserOptions": {
			"project": "tsconfig.eslint.json"
		},
		"env": {
			"jest": true
		}
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/src/__tests__/fixtures"
