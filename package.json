{
	"name": "@unicsmcr/hs_auth_client",
	"version": "3.1.1",
	"description": "API request paths for hs_auth platform",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"prebuild": "npm run lint",
		"build": "tsc",
		"lint": "eslint src --ext .ts",
		"test": "jest src --coverage"
	},
	"files": [
		"dist/**/*.d.ts",
		"dist/**/*.js"
	],
	"author": "unicsmcr",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/unicsmcr/hs_auth_client.git"
	},
	"bugs": {
		"url": "https://github.com/unicsmcr/hs_auth_client/issues"
	},
	"homepage": "https://github.com/unicsmcr/hs_auth_client#readme",
	"devDependencies": {
		"@types/jest": "^26.0.3",
		"@types/node": "^14.0.14",
		"@typescript-eslint/eslint-plugin": "^3.5.0",
		"@typescript-eslint/parser": "^3.5.0",
		"@unicsmcr/eslint-config": "^0.0.2",
		"axios-mock-adapter": "^1.18.1",
		"eslint": "^7.4.0",
		"jest": "^26.1.0",
		"ts-jest": "^26.1.1",
		"typescript": "^3.9.6"
	},
	"dependencies": {
		"axios": "^0.21.1"
	},
	"eslintConfig": {
		"extends": "@unicsmcr",
		"parserOptions": {
			"project": "tsconfig.eslint.json"
		},
		"env": {
			"jest": true
		}
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"testPathIgnorePatterns": [
			"<rootDir>/src/__tests__/fixtures"
		],
		"globals": {
			"ts-jest": {
				"tsConfig": "tsconfig.jest.json"
			}
		}
	}
}
